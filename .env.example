# Forkast Platform - Environment Variables
# Copy this file to .env and fill in your values

# Login credentials (comma-separated username:password pairs)
FORKAST_USERS=admin:CHANGE_ME_123,demo:demo123

# Admin API key (change this in production!)
FORKAST_ADMIN_API_KEY=fk-admin-dev-key-change-me

# Stripe keys (optional - payment gateway won't work without these)
FORKAST_STRIPE_SECRET_KEY=
FORKAST_STRIPE_PUBLISHABLE_KEY=
FORKAST_STRIPE_WEBHOOK_SECRET=

# Debug mode
FORKAST_DEBUG=false

# HTTPS (only for docker-compose.ssl.yml)
DOMAIN=forkast.yourdomain.com
EMAIL=you@email.com
